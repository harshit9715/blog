    "/feedbacks": {
      "get": {
        "summary": "See all feedbacks given so far.",
        "description": "Use this API to see what other's think about this resume.",
        "tags": [
          "Feedback"
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "headers": {
              "Access-Control-Allow-Origin": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/NewFeedback"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Give your feedback",
        "description": "This API takes feedback and name (optionally) and add the feedback to the list of feedbacks.<hr/>\n- **You need to pass a secret string which you can use to update your feedback. This makes sure no one else can update your feedback.**\n- This is the best I could come up with instead of all that create account hassel.\n",
        "tags": [
          "Feedback"
        ],
        "parameters": [
          {
            "name": "secret",
            "in": "header",
            "description": "A secret that prevents cross feedback updates, could be any string that is easy to remember and hard to guess.",
            "example": "KungfuPanda",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewFeedback"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "200 response",
            "headers": {
              "Access-Control-Allow-Origin": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FeedbackRes"
                }
              }
            }
          }
        }
      }
    },
    "/feedbacks/{id}": {
      "get": {
        "summary": "See a specific feedback.",
        "description": "Use this API to see a specific feedback.",
        "tags": [
          "Feedback"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "This value is autogenerated for every new feedback, you and is returned in list feedbacks API.",
            "schema": {
              "type": "string",
              "format": "guid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "headers": {
              "Access-Control-Allow-Origin": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NewFeedback"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update a specific feedback.",
        "description": "Use this API to update a specific feedback. You can only update yours since its authenticated request.",
        "tags": [
          "Feedback"
        ],
        "parameters": [
          {
            "name": "secret",
            "in": "header",
            "required": true,
            "description": "the secret used when creating a feedback.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "This value is autogenerated for every new feedback, you and is returned in list feedbacks API.",
            "schema": {
              "type": "string",
              "format": "guid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateFeedback"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "200 response",
            "headers": {
              "Access-Control-Allow-Origin": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NewFeedback"
                }
              }
            }
          }
        }
      }
    }
  },
