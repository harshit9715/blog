  "paths": {
    "/skills": {
      "get": {
        "summary": "Skills I have acquired so far.",
        "description": "- I am relatively new in the industry and I don't have ton of experience. I never say no to a problem and works with whatever come my way.\n- Checkout my [blog](https://portfolio-harshit9715.vercel.app/) to see my work-life journey.\n",
        "tags": [
          "Work Profile"
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Skill"
                  }
                },
                "examples": {
                  "example1": {
                    "description": "200 response",
                    "value": [
                      {
                        "name": "Python",
                        "level": "Intermediate",
                        "keywords": [
                          "Flask",
                          "FastAPI",
                          "List Comprehension"
                        ]
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
